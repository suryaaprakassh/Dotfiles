IFS=
result=`speedtest-cli --bytes --simple`
PING=`echo $result | sed -n 1p |cut -d ':' -f2 | cut -d ' ' -f2`

DOWN=`echo $result | sed -n 2p |cut -d ':' -f2 | cut -d ' ' -f2`

UP=`echo $result | sed -n 3p |cut -d ':' -f2 | cut -d ' ' -f2`

echo ÔèΩ $PING" ms" $DOWN "MB/s" $UP "MB/s"
